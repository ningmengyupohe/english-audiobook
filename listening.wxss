/* 重置样式 */
page {
  background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%);
  min-height: 100vh;
}

/* 游戏容器 */
.listening-container {
  padding: 20rpx;
  min-height: 100vh;
}

/* 顶部栏 */
.game-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(33, 150, 243, 0.1);
}

.back-btn {
  width: 60rpx;
  height: 60rpx;
  background: #2196f3;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}

.game-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1565c0;
}

.score {
  font-size: 28rpx;
  color: #2196f3;
  background: #e3f2fd;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
}

/* 音频播放器 */
.audio-player {
  margin-bottom: 40rpx;
}

.audio-card {
  background: white;
  border-radius: 30rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(33, 150, 243, 0.15);
}

.audio-title {
  font-size: 32rpx;
  color: #1565c0;
  font-weight: bold;
  display: block;
  text-align: center;
  margin-bottom: 40rpx;
}

.audio-controls {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.control-btn {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #4fc3f7, #2196f3);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  color: white;
}

.progress-bar {
  flex: 1;
  height: 8rpx;
  background: #e3f2fd;
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(to right, #4fc3f7, #2196f3);
  border-radius: 4rpx;
  transition: width 0.3s;
}

.audio-time {
  font-size: 24rpx;
  color: #64b5f6;
  min-width: 160rpx;
  text-align: right;
}

.play-count {
  text-align: center;
}

.play-count text {
  font-size: 24rpx;
  color: #ff9800;
  background: #fff3e0;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
}

/* 问题区域 */
.question-area {
  background: white;
  border-radius: 30rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(33, 150, 243, 0.15);
}

.question-text {
  font-size: 32rpx;
  color: #1565c0;
  font-weight: bold;
  display: block;
  margin-bottom: 40rpx;
  line-height: 1.4;
}

/* 选项 */
.options-container {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.option-item {
  padding: 30rpx;
  border: 3rpx solid #90caf9;
  border-radius: 20rpx;
  transition: all 0.3s;
}

.option-item:active {
  transform: scale(0.98);
}

.option-text {
  font-size: 28rpx;
  color: #1976d2;
}

.option-selected {
  background: #bbdefb;
  border-color: #2196f3;
}

/* 控制按钮 */
.control-buttons {
  display: flex;
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.btn {
  flex: 1;
  height: 80rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
  color: white;
  transition: all 0.3s;
}

.btn:active {
  transform: scale(0.95);
}

.hint-btn {
  background: linear-gradient(135deg, #ff9800, #f57c00);
}

.submit-btn {
  background: linear-gradient(135deg, #4caf50, #43a047);
}

.next-btn {
  background: linear-gradient(135deg, #2196f3, #1976d2);
}

/* 进度条 */
.progress-section {
  text-align: center;
}

.progress-bar {
  height: 12rpx;
  background: #e3f2fd;
  border-radius: 6rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(to right, #4fc3f7, #2196f3);
  border-radius: 6rpx;
  transition: width 0.3s;
}

.progress-text {
  font-size: 24rpx;
  color: #64b5f6;
}

/* 弹窗样式 */
.result-modal,
.hint-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  animation: fadeIn 0.3s;
}

.modal-content,
.hint-content {
  background: white;
  border-radius: 30rpx;
  padding: 60rpx 40rpx;
  width: 80%;
  text-align: center;
  animation: slideUp 0.3s;
}

.result-icon {
  font-size: 80rpx;
  display: block;
  margin-bottom: 30rpx;
}

.result-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #1565c0;
  display: block;
  margin-bottom: 20rpx;
}

.result-desc {
  font-size: 28rpx;
  color: #2196f3;
  display: block;
  margin-bottom: 40rpx;
}

.result-buttons {
  display: flex;
  gap: 20rpx;
}

.result-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
  color: white;
}

.next-btn {
  background: linear-gradient(135deg, #4caf50, #43a047);
}

.back-btn {
  background: linear-gradient(135deg, #2196f3, #1976d2);
}

/* 提示弹窗 */
.hint-content {
  width: 70%;
}

.hint-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #ff9800;
  display: block;
  margin-bottom: 30rpx;
}

.hint-text {
  font-size: 28rpx;
  color: #f57c00;
  display: block;
  margin-bottom: 40rpx;
  line-height: 1.4;
}

.hint-close {
  height: 80rpx;
  background: linear-gradient(135deg, #2196f3, #1976d2);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
  color: white;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(50rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}