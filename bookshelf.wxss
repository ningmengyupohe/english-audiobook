.bookshelf-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
}

/* 头部 */
.bookshelf-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 30rpx 20rpx;
  background: white;
}

.header-title {
  font-size: 42rpx;
  font-weight: bold;
  color: #333333;
}

.header-actions {
  display: flex;
  gap: 30rpx;
}

.header-icon {
  width: 40rpx;
  height: 40rpx;
}

/* 选项卡 */
.tabs {
  display: flex;
  background: white;
  padding: 0 30rpx;
}

.tab-item {
  flex: 1;
  padding: 30rpx 0;
  text-align: center;
  font-size: 32rpx;
  color: #666666;
  position: relative;
}

.tab-item.active {
  color: #4A90E2;
  font-weight: bold;
}

.tab-indicator {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 6rpx;
  background: #4A90E2;
  border-radius: 3rpx;
  opacity: 0;
}

.tab-item.active .tab-indicator {
  opacity: 1;
}

/* 编辑栏 */
.edit-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx 30rpx;
  background: white;
  border-bottom: 1rpx solid #f0f0f0;
}

.edit-info {
  display: flex;
  align-items: center;
}

.edit-count {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
}

.edit-actions {
  display: flex;
  gap: 40rpx;
}

.edit-action {
  font-size: 28rpx;
  color: #4A90E2;
  font-weight: 500;
  padding: 10rpx 20rpx;
  border-radius: 8rpx;
  background: #f0f7ff;
}

.delete-action {
  color: #FF3B30;
  background: #fff0f0;
}

/* 空状态 */
.empty-state {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 30rpx;
}

.empty-image {
  width: 300rpx;
  height: 300rpx;
  margin-bottom: 40rpx;
  opacity: 0.6;
}

.empty-title {
  font-size: 36rpx;
  color: #333333;
  margin-bottom: 20rpx;
  font-weight: bold;
}

.empty-tip {
  font-size: 28rpx;
  color: #999999;
  margin-bottom: 60rpx;
  text-align: center;
}

.empty-btn {
  background: #4A90E2;
  color: white;
  border-radius: 50rpx;
  padding: 25rpx 60rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.empty-btn::after {
  border: none;
}

/* 书架列表 */
.bookshelf-list {
  flex: 1;
  padding: 30rpx;
}

.book-card {
  display: flex;
  background: white;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  padding: 30rpx;
  position: relative;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.book-card.edit-mode {
  padding-left: 100rpx;
}

.book-card.selected {
  background: #f0f7ff;
  border: 2rpx solid #4A90E2;
}

.select-checkbox {
  position: absolute;
  left: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.checkbox-icon {
  width: 40rpx;
  height: 40rpx;
}

.book-cover {
  width: 140rpx;
  height: 180rpx;
  border-radius: 12rpx;
  margin-right: 30rpx;
  flex-shrink: 0;
}

.book-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.book-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 10rpx;
}

.book-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  flex: 1;
  margin-right: 20rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.book-actions {
  display: flex;
  gap: 20rpx;
  flex-shrink: 0;
}

.action-icon {
  width: 36rpx;
  height: 36rpx;
}

.favorite-icon {
  width: 40rpx;
  height: 40rpx;
}

.book-author {
  font-size: 26rpx;
  color: #666666;
  margin-bottom: 20rpx;
}

/* 进度条 */
.progress-section {
  margin-bottom: 20rpx;
  /* 添加这些样式限制宽度 */
  max-width: 100%;
  overflow: hidden;
}

/* 确保进度条容器不超出 */
.progress-container {
  width: 100%;
  height: 12rpx; /* 或你想要的合适高度 */
  background-color: #F0F0F0;
  border-radius: 6rpx;
  overflow: hidden;
  /* 确保在容器内 */
  margin: 0;
  padding: 0;
}

.progress-bar {
  height: 100%;
  background-color: #4A90E2;
  border-radius: 6rpx;
  transition: width 0.3s ease;
}

.progress-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
  /* 确保文字也不超出 */
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.progress-text {
  font-size: 24rpx;
  color: #666666;
  max-width: 70%;
  overflow: hidden;
  text-overflow: ellipsis;
}

.progress-percent {
  font-size: 24rpx;
  color: #4A90E2;
  font-weight: bold;
  min-width: 60rpx; /* 确保百分比显示完整 */
}
/* 元信息 */
.book-meta {
  display: flex;
  align-items: center;
  margin-bottom: 25rpx;
  flex-wrap: wrap;
  gap: 20rpx;
}

.meta-item {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #999999;
}

.meta-icon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 8rpx;
}

.category-tag {
  background: #f0f0f0;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  color: #666666;
}

/* 继续播放按钮 */
.continue-btn {
  align-self: flex-start;
  background: #4A90E2;
  color: white;
  border-radius: 25rpx;
  padding: 12rpx 30rpx;
  font-size: 24rpx;
  font-weight: 500;
  margin-top: auto;
}

.continue-btn::after {
  border: none;
}

/* 最近播放时间 */
.last-play-time {
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  font-size: 22rpx;
  color: #999999;
}