/* 全局样式 */
page {
  background: linear-gradient(180deg, #e3f2fd 0%, #bbdefb 50%, #90caf9 100%);
  min-height: 100vh;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, sans-serif;
}

/* 导航栏 */
.nav-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  background-color: rgba(255, 255, 255, 0.95);
  border-bottom: 1px solid rgba(66, 165, 245, 0.2);
}

.nav-back {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background-color: rgba(66, 165, 245, 0.1);
}

.nav-icon {
  font-size: 36rpx;
  color: #1565c0;
  line-height: 1;
}

.nav-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1565c0;
  line-height: 1.2;
}

/* 登录容器 */
.login-container {
  padding: 60rpx 50rpx 40rpx;
}

/* 欢迎标题 */
.welcome-section {
  margin-bottom: 80rpx;
  text-align: center;
}

.welcome-title {
  display: block;
  font-size: 48rpx;
  font-weight: 700;
  color: #0d47a1;
  margin-bottom: 20rpx;
  line-height: 1.3;
}

.welcome-subtitle {
  display: block;
  font-size: 28rpx;
  color: #42a5f5;
  line-height: 1.4;
}

/* 表单样式 */
.login-form {
  margin-bottom: 80rpx;
}

.form-item {
  margin-bottom: 60rpx;
}

.form-label-container {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
  gap: 16rpx;
}

.form-icon {
  font-size: 36rpx;
  color: #42a5f5;
  line-height: 1;
  width: 36rpx;
  text-align: center;
}

.form-label {
  font-size: 32rpx;
  font-weight: 500;
  color: #1565c0;
  line-height: 1.2;
}

.form-input {
  width: 100%;
  height: 96rpx;
  padding: 0 32rpx;
  background-color: rgba(255, 255, 255, 0.95);
  border: 2px solid rgba(66, 165, 245, 0.3);
  border-radius: 24rpx;
  font-size: 32rpx;
  color: #1565c0;
  box-sizing: border-box;
  line-height: 96rpx;
}

.form-input:focus {
  border-color: #42a5f5;
  box-shadow: 0 0 0 3rpx rgba(66, 165, 245, 0.2);
}

.placeholder {
  color: rgba(66, 165, 245, 0.6);
  font-size: 32rpx;
  line-height: 1.2;
}

/* 密码输入 */
.password-input {
  position: relative;
}

.password-actions {
  position: absolute;
  right: 32rpx;
  top: 0;
  height: 96rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.password-toggle {
  font-size: 36rpx;
  color: #42a5f5;
  padding: 10rpx;
  line-height: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 表单选项 */
.form-options {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 24rpx;
}

.remember-checkbox {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.checkbox-icon {
  font-size: 32rpx;
  line-height: 1;
  color: #42a5f5;
}

.checkbox-text {
  font-size: 28rpx;
  color: #42a5f5;
  line-height: 1.2;
}

.forgot-link {
  font-size: 28rpx;
  color: #1565c0;
  text-decoration: underline;
  line-height: 1.2;
}

/* 登录按钮 */
.login-btn {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 36rpx;
  font-weight: 600;
  border-radius: 50rpx;
  border: none;
  margin-top: 20rpx;
  background-color: rgba(66, 165, 245, 0.3);
  color: rgba(255, 255, 255, 0.7);
  transition: all 0.3s ease;
}

.login-btn.active {
  background: linear-gradient(135deg, #42a5f5, #2196f3);
  color: white;
  box-shadow: 0 10rpx 30rpx rgba(66, 165, 245, 0.4);
}

.login-btn.active:active {
  transform: translateY(2rpx);
  box-shadow: 0 6rpx 20rpx rgba(66, 165, 245, 0.6);
}

.login-btn.disabled {
  background-color: rgba(66, 165, 245, 0.3);
  color: rgba(255, 255, 255, 0.7);
}

.login-btn::after {
  border: none;
}

/* 注册链接 */
.register-section {
  text-align: center;
  margin-bottom: 60rpx;
  padding: 40rpx 0;
  border-top: 1px solid rgba(66, 165, 245, 0.2);
  border-bottom: 1px solid rgba(66, 165, 245, 0.2);
}

.register-text {
  font-size: 32rpx;
  color: #42a5f5;
  margin-right: 20rpx;
  line-height: 1.2;
}

.register-link {
  font-size: 32rpx;
  font-weight: 600;
  color: #1565c0;
  text-decoration: underline;
  line-height: 1.2;
}

/* 协议区域 */
.agreement-section {
  text-align: center;
  margin-bottom: 60rpx;
  padding: 0 40rpx;
}

.agreement-text {
  font-size: 24rpx;
  color: rgba(66, 165, 245, 0.8);
  margin-right: 8rpx;
  line-height: 1.3;
}

.agreement-link {
  font-size: 24rpx;
  color: #42a5f5;
  text-decoration: underline;
  line-height: 1.3;
}

/* 底部装饰 */
.bottom-decoration {
  text-align: center;
  padding: 40rpx 0;
}

.decoration-text {
  font-size: 32rpx;
  color: rgba(66, 165, 245, 0.6);
  font-style: italic;
  line-height: 1.2;
}

/* 响应式调整 */
@media (max-width: 750rpx) {
  .login-container {
    padding: 50rpx 40rpx 30rpx;
  }
  
  .welcome-title {
    font-size: 42rpx;
  }
  
  .welcome-subtitle {
    font-size: 28rpx;
  }
  
  .form-label {
    font-size: 30rpx;
  }
  
  .form-input {
    height: 88rpx;
    line-height: 88rpx;
    font-size: 30rpx;
  }
  
  .login-btn {
    height: 96rpx;
    line-height: 96rpx;
    font-size: 34rpx;
  }
}
/* 密码容器 */
.password-container {
    position: relative;
    width: 100%;
  }
  
  /* 眼睛图标样式 */
  .password-eye {
    position: absolute;
    right: 32rpx;
    top: 0;
    height: 96rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 10;
  }
  
  .eye-icon {
    font-size: 36rpx;
    color: #42a5f5;
    line-height: 1;
  }