/* 重置样式 */
page {
  background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%);
  min-height: 100vh;
}

/* 游戏容器 */
.spelling-container {
  padding: 20rpx;
  min-height: 100vh;
}

/* 顶部栏 */
.game-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(33, 150, 243, 0.1);
}

.back-btn {
  width: 60rpx;
  height: 60rpx;
  background: #2196f3;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}

.game-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1565c0;
}

.score {
  font-size: 28rpx;
  color: #2196f3;
  background: #e3f2fd;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
}

/* 单词卡片 */
.word-card {
  background: white;
  border-radius: 30rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(33, 150, 243, 0.15);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.word-meaning {
  font-size: 32rpx;
  color: #1565c0;
  font-weight: bold;
  flex: 1;
}

.hint-btn {
  width: 60rpx;
  height: 60rpx;
  background: #bbdefb;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #2196f3;
}

/* 拼写区域 */
.spelling-area {
  text-align: center;
}

.current-spelling {
  display: flex;
  justify-content: center;
  gap: 20rpx;
  margin-bottom: 60rpx;
  min-height: 100rpx;
}

.letter-box {
  width: 80rpx;
  height: 80rpx;
  background: #e3f2fd;
  border: 3rpx solid #90caf9;
  border-radius: 15rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  font-weight: bold;
  color: #2196f3;
}

/* 字母选择区 */
.letters-choice {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.letter-option {
  height: 80rpx;
  background: white;
  border: 3rpx solid #64b5f6;
  border-radius: 15rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: bold;
  color: #1976d2;
  transition: all 0.2s;
}

.letter-option:active {
  transform: scale(0.95);
  background: #bbdefb;
}

/* 控制按钮 */
.control-buttons {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.btn {
  flex: 1;
  height: 80rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
  color: white;
  transition: all 0.3s;
}

.btn:active {
  transform: scale(0.95);
}

.delete-btn {
  background: linear-gradient(135deg, #ef5350, #e53935);
}

.submit-btn {
  background: linear-gradient(135deg, #4caf50, #43a047);
}

.skip-btn {
  background: linear-gradient(135deg, #ff9800, #f57c00);
}

/* 提示区域 */
.hint-area {
  background: #fff9c4;
  padding: 20rpx;
  border-radius: 15rpx;
  margin-bottom: 40rpx;
  animation: fadeIn 0.5s;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.hint-text {
  font-size: 26rpx;
  color: #f57c00;
}

/* 进度条 */
.progress-section {
  text-align: center;
}

.progress-bar {
  height: 12rpx;
  background: #e3f2fd;
  border-radius: 6rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(to right, #4fc3f7, #2196f3);
  border-radius: 6rpx;
  transition: width 0.3s;
}

.progress-text {
  font-size: 24rpx;
  color: #64b5f6;
}

/* 结果弹窗 */
.result-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  animation: fadeIn 0.3s;
}

.modal-content {
  background: white;
  border-radius: 30rpx;
  padding: 60rpx 40rpx;
  width: 80%;
  text-align: center;
  animation: slideUp 0.3s;
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(50rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.result-icon {
  font-size: 80rpx;
  display: block;
  margin-bottom: 30rpx;
}

.result-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #1565c0;
  display: block;
  margin-bottom: 20rpx;
}

.result-word {
  font-size: 28rpx;
  color: #2196f3;
  display: block;
  margin-bottom: 10rpx;
}

.result-meaning {
  font-size: 24rpx;
  color: #64b5f6;
  display: block;
  margin-bottom: 40rpx;
}

.result-buttons {
  display: flex;
  gap: 20rpx;
}

.result-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
  color: white;
}

.next-btn {
  background: linear-gradient(135deg, #4caf50, #43a047);
}

.back-btn {
  background: linear-gradient(135deg, #2196f3, #1976d2);
}