.feedback-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
}

/* 头部 */
.feedback-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx 30rpx 20rpx;
  background: white;
  border-bottom: 1rpx solid #f0f0f0;
  flex-shrink: 0;
}

.back-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  width: 32rpx;
  height: 32rpx;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
}

.header-right {
  width: 60rpx;
}

/* 反馈内容 */
.feedback-content {
  flex: 1;
  padding: 30rpx;
}

/* 反馈区块 */
.feedback-section {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 40rpx;
}

/* 类型选择 */
.type-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 30rpx;
}

.type-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 20rpx;
  border: 2rpx solid #e5e5e5;
  border-radius: 16rpx;
  transition: all 0.3s;
}

.type-item.selected {
  border-color: #4A90E2;
  background: #f0f7ff;
}

.type-icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 20rpx;
}

.type-text {
  font-size: 24rpx;
  color: #333333;
}

/* 问题描述 */
.input-container {
  border: 2rpx solid #e5e5e5;
  border-radius: 12rpx;
  overflow: hidden;
}

.content-input {
  width: 100%;
  min-height: 200rpx;
  padding: 30rpx;
  font-size: 28rpx;
  line-height: 1.6;
  color: #333333;
  box-sizing: border-box;
}

.content-input::placeholder {
  color: #999999;
}

.input-footer {
  display: flex;
  justify-content: flex-end;
  padding: 20rpx 30rpx;
  background: #f9f9f9;
  border-top: 1rpx solid #e5e5e5;
}

.word-count {
  font-size: 24rpx;
  color: #999999;
}

/* 联系方式 */
.contact-inputs {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.contact-item {
  display: flex;
  align-items: center;
}

.contact-label {
  font-size: 28rpx;
  color: #333333;
  width: 120rpx;
  flex-shrink: 0;
}

.contact-input {
  flex: 1;
  padding: 20rpx;
  border: 2rpx solid #e5e5e5;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333333;
}

.contact-input::placeholder {
  color: #999999;
}

/* 上传截图 */
.upload-container {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.image-preview {
  position: relative;
  width: 180rpx;
  height: 180rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.preview-image {
  width: 100%;
  height: 100%;
}

.image-delete {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  width: 40rpx;
  height: 40rpx;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.delete-icon {
  width: 20rpx;
  height: 20rpx;
}

.upload-btn {
  width: 180rpx;
  height: 180rpx;
  border: 2rpx dashed #cccccc;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.upload-icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 20rpx;
}

.upload-text {
  font-size: 24rpx;
  color: #999999;
}

.upload-tip {
  display: block;
  font-size: 24rpx;
  color: #999999;
  line-height: 1.5;
}

/* 提交按钮 */
.submit-section {
  padding: 40rpx 0 60rpx;
}

.submit-btn {
  background: #4A90E2;
  color: white;
  border-radius: 16rpx;
  height: 100rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.submit-btn.disabled {
  background: #cccccc;
  color: #666666;
}

.submit-btn::after {
  border: none;
}

/* 反馈历史 */
.history-section {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.history-list {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.history-item {
  padding: 30rpx;
  background: #f9f9f9;
  border-radius: 12rpx;
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.history-type {
  font-size: 24rpx;
  color: #4A90E2;
  font-weight: 500;
  background: #e8f1ff;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
}

.history-time {
  font-size: 22rpx;
  color: #999999;
}

.history-content {
  display: block;
  font-size: 28rpx;
  color: #333333;
  line-height: 1.5;
  margin-bottom: 20rpx;
  word-break: break-all;
}

.history-status {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.status-badge {
  font-size: 22rpx;
  font-weight: 500;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
}

.status-pending {
  background: #fff0e6;
  color: #ff9500;
}

.status-processing {
  background: #e6f2ff;
  color: #4A90E2;
}

.status-resolved {
  background: #e6ffe6;
  color: #07c160;
}

.history-reply {
  font-size: 24rpx;
  color: #4A90E2;
}