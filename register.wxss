/* pages/register/register.wxss */
.register-page {
    min-height: 100vh;
    background-color: #f8f9fa;
  }
  
  .container {
    padding: 40rpx 40rpx 30rpx;
  }
  
  /* 导航栏 */
  .nav-bar {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 40rpx 30rpx 20rpx;
    background-color: #fff;
    border-bottom: 1rpx solid #f0f0f0;
  }
  
  .nav-back {
    width: 60rpx;
    height: 60rpx;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .nav-icon {
    font-size: 40rpx;
    color: #333;
  }
  
  .nav-title {
    font-size: 36rpx;
    font-weight: 600;
    color: #333;
  }
  
  /* 欢迎区域 */
  .welcome-section {
    margin-bottom: 60rpx;
    text-align: center;
  }
  
  .welcome-title {
    display: block;
    font-size: 48rpx;
    font-weight: bold;
    color: #333;
    margin-bottom: 15rpx;
  }
  
  .welcome-subtitle {
    font-size: 28rpx;
    color: #666;
  }
  
  /* 表单 */
  .register-form {
    margin-bottom: 50rpx;
  }
  
  .form-item {
    margin-bottom: 40rpx;
  }
  
  .form-label {
    display: flex;
    align-items: center;
    font-size: 30rpx;
    color: #333;
    margin-bottom: 20rpx;
    font-weight: 500;
  }
  
  .form-icon {
    margin-right: 15rpx;
    font-size: 32rpx;
  }
  
  .form-input {
    width: 100%;
    height: 100rpx;
    background: #fff;
    border-radius: 16rpx;
    padding: 0 30rpx;
    font-size: 30rpx;
    color: #333;
    box-sizing: border-box;
    border: 2rpx solid #e0e0e0;
    transition: border-color 0.3s;
  }
  
  .form-input:focus {
    border-color: #667eea;
  }
  
  .placeholder {
    color: #999;
    font-size: 30rpx;
  }
  
  /* 密码输入容器 */
  .password-input-container {
    position: relative;
  }
  
  .password-input {
    padding-right: 80rpx !important; /* 为眼睛图标留出空间 */
  }
  
  .eye-icon-container {
    position: absolute;
    right: 20rpx;
    top: 50%;
    transform: translateY(-50%);
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0 10rpx;
  }
  
  .eye-icon {
    font-size: 36rpx;
    color: #666;
    padding: 10rpx;
  }
  
  /* 表单提示 */
  .form-tips {
    margin-top: 10rpx;
    padding-left: 10rpx;
  }
  
  .tips-text {
    font-size: 24rpx;
    color: #ff4444;
  }
  
  /* 协议区域 */
  .agreement-section {
    margin: 40rpx 0 30rpx;
  }
  
  .agreement-checkbox {
    display: flex;
    align-items: center;
    font-size: 26rpx;
    color: #666;
    flex-wrap: wrap;
  }
  
  .checkbox-icon-container {
    margin-right: 10rpx;
  }
  
  .checkbox-icon {
    width: 32rpx;
    height: 32rpx;
    border: 2rpx solid #ccc;
    border-radius: 6rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 20rpx;
    color: #667eea;
    background: #fff;
  }
  
  .agreement-link {
    color: #667eea;
    margin: 0 5rpx;
  }
  
  /* 注册按钮 */
  .register-btn {
    width: 100%;
    height: 100rpx;
    border-radius: 16rpx;
    font-size: 34rpx;
    font-weight: 500;
    display: flex;
    align-items: center;
    justify-content: center;
    border: none;
    margin-top: 20rpx;
    transition: all 0.3s;
  }
  
  .register-btn.disabled {
    background-color: #ccc;
    color: #fff;
  }
  
  .register-btn.active {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: #fff;
  }
  
  .register-btn.active.btn-hover {
    opacity: 0.9;
    transform: translateY(-2rpx);
  }
  
  /* 登录链接 */
  .login-section {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-bottom: 40rpx;
  }
  
  .login-text {
    font-size: 28rpx;
    color: #666;
    margin-right: 15rpx;
  }
  
  .login-link {
    font-size: 28rpx;
    color: #667eea;
    font-weight: 500;
  }
  
  /* 底部装饰 */
  .bottom-decoration {
    text-align: center;
    padding-top: 30rpx;
    border-top: 1rpx solid #f0f0f0;
  }
  
  .decoration-text {
    font-size: 24rpx;
    color: #999;
  }