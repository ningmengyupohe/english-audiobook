.help-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 120rpx;
}

/* 头部 */
.help-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx 30rpx 20rpx;
  background: white;
  border-bottom: 1rpx solid #f0f0f0;
}

.back-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  width: 32rpx;
  height: 32rpx;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
}

.search-icon {
  width: 40rpx;
  height: 40rpx;
}

/* 搜索框 */
.search-section {
  padding: 30rpx;
  background: white;
}

.search-box {
  background: #f5f5f5;
  border-radius: 50rpx;
  padding: 25rpx 30rpx;
  display: flex;
  align-items: center;
}

.search-icon-small {
  width: 32rpx;
  height: 32rpx;
  margin-right: 15rpx;
}

.search-placeholder {
  color: #999999;
  font-size: 28rpx;
}

/* 常见问题 */
.faq-section {
  background: white;
  margin: 30rpx;
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 40rpx;
}

.faq-list {
  margin-bottom: 20rpx;
}

.faq-item {
  margin-bottom: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  padding-bottom: 30rpx;
}

.faq-item:last-child {
  margin-bottom: 0;
  border-bottom: none;
  padding-bottom: 0;
}

.faq-question {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.question-text {
  flex: 1;
  font-size: 30rpx;
  color: #333333;
  font-weight: 500;
  line-height: 1.4;
}

.faq-arrow {
  width: 32rpx;
  height: 32rpx;
  margin-left: 20rpx;
  flex-shrink: 0;
}

.faq-answer {
  background: #f9f9f9;
  border-radius: 12rpx;
  padding: 25rpx;
}

.answer-text {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.6;
}

/* 分类帮助 */
.category-section {
  background: white;
  margin: 30rpx;
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.category-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 40rpx 30rpx;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.category-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
}

.category-name {
  font-size: 26rpx;
  color: #333333;
  text-align: center;
}

/* 联系客服 */
.contact-section {
  padding: 0 30rpx;
  margin-bottom: 60rpx;
}

.contact-card {
  background: linear-gradient(135deg, #4A90E2, #5BA0FF);
  border-radius: 20rpx;
  padding: 40rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 20rpx rgba(74, 144, 226, 0.3);
}

.contact-icon {
  width: 60rpx;
  height: 60rpx;
  margin-right: 25rpx;
}

.contact-info {
  flex: 1;
}

.contact-title {
  display: block;
  font-size: 32rpx;
  color: white;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.contact-subtitle {
  display: block;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.contact-btn {
  background: white;
  color: #4A90E2;
  border-radius: 50rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  font-weight: bold;
}

.contact-btn::after {
  border: none;
}

/* 底部导航 */
.bottom-nav {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  display: flex;
  padding: 30rpx;
  border-top: 1rpx solid #f0f0f0;
  z-index: 100;
}

.nav-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.nav-icon {
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 10rpx;
}

.nav-text {
  font-size: 22rpx;
  color: #666666;
}