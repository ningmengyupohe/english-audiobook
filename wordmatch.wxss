/* 重置样式 */
page {
  background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%);
  min-height: 100vh;
}

/* 游戏容器 */
.wordmatch-container {
  padding: 20rpx;
  min-height: 100vh;
}

/* 顶部栏 */
.game-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(33, 150, 243, 0.1);
}

.back-btn {
  width: 60rpx;
  height: 60rpx;
  background: #2196f3;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}

.game-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1565c0;
}

.score {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  font-size: 26rpx;
  color: #2196f3;
}

.timer {
  font-size: 22rpx;
  color: #ff9800;
  background: #fff3e0;
  padding: 6rpx 12rpx;
  border-radius: 15rpx;
  margin-top: 5rpx;
}

/* 游戏说明 */
.instructions {
  background: white;
  border-radius: 30rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  box-shadow: 0 8rpx 24rpx rgba(33, 150, 243, 0.15);
  animation: fadeIn 0.5s;
}

.instruction-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #1565c0;
  display: block;
  margin-bottom: 30rpx;
}

.instruction-text {
  font-size: 28rpx;
  color: #2196f3;
  display: block;
  margin-bottom: 60rpx;
  line-height: 1.4;
}

.start-btn {
  height: 100rpx;
  background: linear-gradient(135deg, #4caf50, #43a047);
  border-radius: 25rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: bold;
  color: white;
  transition: all 0.3s;
}

.start-btn:active {
  transform: scale(0.95);
}

/* 游戏区域 */
.game-area {
  animation: fadeIn 0.5s;
}

.level-info {
  background: white;
  border-radius: 20rpx;
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(33, 150, 243, 0.1);
}

.level-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #1565c0;
}

.matches-count {
  font-size: 24rpx;
  color: #2196f3;
  background: #e3f2fd;
  padding: 8rpx 16rpx;
  border-radius: 15rpx;
}

/* 连线区域 */
.matching-area {
  display: flex;
  justify-content: space-between;
  margin-bottom: 40rpx;
}

.english-words,
.chinese-words {
  width: 48%;
}

.word-column {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(33, 150, 243, 0.1);
}

.word-item {
  padding: 30rpx;
  margin-bottom: 20rpx;
  border: 3rpx solid #90caf9;
  border-radius: 15rpx;
  text-align: center;
  transition: all 0.3s;
  position: relative;
}

.word-item:active {
  transform: scale(0.95);
}

.word-item:last-child {
  margin-bottom: 0;
}

.word-text {
  font-size: 28rpx;
  font-weight: bold;
  color: #1976d2;
}

.word-selected {
  background: #bbdefb;
  border-color: #2196f3;
  box-shadow: 0 4rpx 12rpx rgba(33, 150, 243, 0.2);
}

.word-matched {
  background: linear-gradient(135deg, #c8e6c9, #a5d6a7);
  border-color: #66bb6a;
  color: #388e3c;
}

/* 控制按钮 */
.control-buttons {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.btn {
  flex: 1;
  height: 80rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
  color: white;
  transition: all 0.3s;
}

.btn:active {
  transform: scale(0.95);
}

.hint-btn {
  background: linear-gradient(135deg, #ff9800, #f57c00);
}

.reset-btn {
  background: linear-gradient(135deg, #ef5350, #e53935);
}

.check-btn {
  background: linear-gradient(135deg, #4caf50, #43a047);
}

/* 连线区域 */
.connection-area {
  background: white;
  border-radius: 20rpx;
  padding: 20rpx;
  margin-bottom: 40rpx;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(33, 150, 243, 0.1);
}

.connection-area text {
  font-size: 26rpx;
  color: #2196f3;
}

/* 进度条 */
.progress-section {
  text-align: center;
}

.progress-bar {
  height: 12rpx;
  background: #e3f2fd;
  border-radius: 6rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(to right, #4fc3f7, #2196f3);
  border-radius: 6rpx;
  transition: width 0.3s;
}

.progress-text {
  font-size: 24rpx;
  color: #64b5f6;
}

/* 弹窗样式 */
.result-modal,
.hint-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  animation: fadeIn 0.3s;
}

.modal-content,
.hint-content {
  background: white;
  border-radius: 30rpx;
  padding: 60rpx 40rpx;
  width: 80%;
  text-align: center;
  animation: slideUp 0.3s;
}

.result-icon {
  font-size: 80rpx;
  display: block;
  margin-bottom: 30rpx;
}

.result-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #1565c0;
  display: block;
  margin-bottom: 20rpx;
}

.result-score,
.result-time {
  font-size: 28rpx;
  color: #2196f3;
  display: block;
  margin-bottom: 10rpx;
}

.result-buttons {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-top: 40rpx;
}

.result-btn {
  height: 80rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
  color: white;
}

.next-btn {
  background: linear-gradient(135deg, #4caf50, #43a047);
}

.restart-btn {
  background: linear-gradient(135deg, #ff9800, #f57c00);
}

.back-btn {
  background: linear-gradient(135deg, #2196f3, #1976d2);
}

/* 提示弹窗 */
.hint-content {
  width: 70%;
}

.hint-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #ff9800;
  display: block;
  margin-bottom: 30rpx;
}

.hint-text {
  font-size: 28rpx;
  color: #f57c00;
  display: block;
  margin-bottom: 40rpx;
  line-height: 1.4;
}

.hint-close {
  height: 80rpx;
  background: linear-gradient(135deg, #2196f3, #1976d2);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
  color: white;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(50rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}