/* pages/search/search.wxss */
page {
    background: #f8f9fa;
  }
  
  .search-container {
    min-height: 100vh;
    background: #f8f9fa;
  }
  
  /* 顶部搜索栏 */
  .search-header {
    background: #1890ff;
    padding: 20rpx 32rpx;
    position: sticky;
    top: 0;
    z-index: 100;
  }
  
  .search-bar {
    display: flex;
    align-items: center;
    height: 88rpx;
    background: white;
    border-radius: 44rpx;
    padding: 0 28rpx;
  }
  
  .search-back {
    margin-right: 20rpx;
    display: flex;
    align-items: center;
  }
  
  .search-back-icon {
    font-size: 40rpx;
    color: #333;
  }
  
  .search-input-container {
    flex: 1;
    display: flex;
    align-items: center;
  }
  
  .search-icon {
    font-size: 36rpx;
    color: #999;
    margin-right: 20rpx;
  }
  
  .search-input {
    flex: 1;
    height: 100%;
    font-size: 32rpx;
    color: #333;
    line-height: normal;
  }
  
  .search-placeholder {
    color: #aaa;
    font-size: 32rpx;
  }
  
  .search-clear {
    font-size: 36rpx;
    color: #999;
    margin-left: 20rpx;
    padding: 8rpx;
  }
  
  .search-cancel {
    margin-left: 20rpx;
    font-size: 32rpx;
    color: white;
    font-weight: 500;
    padding: 8rpx 16rpx;
  }
  
  /* 筛选标签区域 */
  .filter-tags-section {
    background: white;
    padding: 20rpx 32rpx;
    border-bottom: 1rpx solid #f0f0f0;
  }
  
  .filter-group {
    margin-bottom: 20rpx;
  }
  
  .filter-label {
    font-size: 28rpx;
    color: #666;
    font-weight: 500;
    margin-bottom: 12rpx;
    display: block;
  }
  
  .filter-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 12rpx;
  }
  
  .filter-tag {
    padding: 12rpx 24rpx;
    border-radius: 40rpx;
    font-size: 26rpx;
    color: #666;
    background: #f8f9fa;
    border: 2rpx solid #e8e8e8;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
  }
  
  .filter-tag.active {
    color: white;
    background: #1890ff;
    border-color: #1890ff;
    font-weight: 500;
  }
  
  .filter-tag .tag-icon {
    margin-right: 8rpx;
    font-size: 24rpx;
  }
  
  .filter-tag .tag-count {
    font-size: 22rpx;
    margin-left: 4rpx;
    opacity: 0.8;
  }
  
  /* 清除筛选 */
  .clear-filters {
    margin-top: 24rpx;
    padding-top: 20rpx;
    border-top: 1rpx solid #f0f0f0;
  }
  
  .clear-all-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 12rpx;
    padding: 16rpx 32rpx;
    background: #f8f9fa;
    border-radius: 40rpx;
    font-size: 28rpx;
    color: #666;
  }
  
  .clear-icon {
    font-size: 28rpx;
  }
  
  .clear-text {
    font-weight: 500;
  }
  
  /* 搜索结果区域 */
  .search-results {
    flex: 1;
    background: white;
  }
  
  /* 加载状态 */
  .loading-state {
    padding: 120rpx 32rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    background: white;
  }
  
  .loading-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 32rpx;
  }
  
  .loading-spinner {
    width: 80rpx;
    height: 80rpx;
    border: 6rpx solid #f3f3f3;
    border-top: 6rpx solid #1890ff;
    border-radius: 50%;
    animation: spin 1s linear infinite;
  }
  
  @keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
  }
  
  .loading-text {
    font-size: 28rpx;
    color: #1890ff;
  }
  
  /* 错误状态 */
  .error-state {
    padding: 120rpx 32rpx;
    background: white;
  }
  
  .error-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 24rpx;
  }
  
  .error-icon {
    font-size: 80rpx;
    opacity: 0.7;
    color: #1890ff;
  }
  
  .error-title {
    font-size: 32rpx;
    color: #1890ff;
    font-weight: 500;
  }
  
  .error-desc {
    font-size: 26rpx;
    color: #666;
    text-align: center;
    margin-bottom: 40rpx;
  }
  
  .retry-button {
    background: #1890ff;
    color: white;
    border: none;
    border-radius: 50rpx;
    padding: 20rpx 48rpx;
    font-size: 28rpx;
    font-weight: 500;
  }
  
  .retry-button::after {
    border: none;
  }
  
  /* 搜索结果统计 */
  .results-stats {
    padding: 20rpx 32rpx;
    background: white;
    border-bottom: 1rpx solid #f0f0f0;
  }
  
  .results-count {
    font-size: 28rpx;
    color: #666;
  }
  
  .count-number {
    font-size: 32rpx;
    font-weight: 700;
    color: #1890ff;
    margin: 0 8rpx;
  }
  
  /* 滚动区域 */
  .results-scroll {
    height: calc(100vh - 400rpx);
    min-height: 400rpx;
  }
  
  /* 无结果状态 */
  .no-results {
    padding: 120rpx 32rpx;
    background: white;
  }
  
  .no-results-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 24rpx;
  }
  
  .no-results-icon {
    font-size: 80rpx;
    opacity: 0.5;
    color: #1890ff;
    margin-bottom: 20rpx;
  }
  
  .no-results-title {
    font-size: 32rpx;
    color: #1890ff;
    font-weight: 500;
  }
  
  .no-results-desc {
    font-size: 26rpx;
    color: #666;
    text-align: center;
    margin-bottom: 40rpx;
  }
  
  .no-results-button {
    background: #f8f9fa;
    color: #1890ff;
    border: 2rpx solid #1890ff;
    border-radius: 50rpx;
    padding: 20rpx 48rpx;
    font-size: 28rpx;
    font-weight: 500;
  }
  
  .no-results-button::after {
    border: none;
  }
  
  /* 书籍列表 */
  .books-list {
    padding: 0 32rpx;
  }
  
  .book-card {
    padding: 28rpx 0;
    border-bottom: 1rpx solid #f0f0f0;
    display: flex;
    gap: 28rpx;
  }
  
  .book-card:last-child {
    border-bottom: none;
  }
  
  .book-cover-container {
    width: 160rpx;
    height: 220rpx;
    border-radius: 12rpx;
    overflow: hidden;
    position: relative;
    flex-shrink: 0;
  }
  
  .book-cover {
    width: 100%;
    height: 100%;
  }
  
  .book-badge {
    position: absolute;
    top: 8rpx;
    right: 8rpx;
    background: #ff4d4f;
    color: white;
    padding: 4rpx 12rpx;
    border-radius: 16rpx;
    font-size: 20rpx;
    font-weight: 600;
  }
  
  .badge-text {
    font-size: 20rpx;
  }
  
  .book-info {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 12rpx;
  }
  
  .book-title {
    font-size: 32rpx;
    color: #333;
    font-weight: 600;
    line-height: 1.4;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
  }
  
  .book-author {
    font-size: 26rpx;
    color: #666;
  }
  
  .book-meta {
    display: flex;
    gap: 20rpx;
    align-items: center;
    flex-wrap: wrap;
  }
  
  .book-meta-item {
    display: flex;
    align-items: center;
    gap: 6rpx;
    font-size: 24rpx;
    color: #999;
  }
  
  .meta-icon {
    font-size: 22rpx;
  }
  
  .meta-text {
    font-size: 24rpx;
  }
  
  .book-desc {
    font-size: 24rpx;
    color: #666;
    line-height: 1.5;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
  }
  
  .book-tags {
    display: flex;
    gap: 12rpx;
    flex-wrap: wrap;
  }
  
  .book-tag {
    padding: 4rpx 12rpx;
    border-radius: 16rpx;
    font-size: 22rpx;
    border: 1rpx solid;
    background: white;
  }
  
  /* 加载更多 */
  .load-more {
    padding: 40rpx 32rpx;
    text-align: center;
    background: white;
    border-top: 1rpx solid #f0f0f0;
  }
  
  .load-text {
    font-size: 26rpx;
    color: #999;
  }
  
  .loading-more {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 16rpx;
  }
  
  .loading-dots {
    display: flex;
    gap: 10rpx;
  }
  
  .loading-dots .dot {
    width: 16rpx;
    height: 16rpx;
    background: #1890ff;
    border-radius: 50%;
    animation: dotBounce 1.4s ease-in-out infinite;
  }
  
  .loading-dots .dot:nth-child(2) {
    animation-delay: 0.2s;
  }
  
  .loading-dots .dot:nth-child(3) {
    animation-delay: 0.4s;
  }
  
  @keyframes dotBounce {
    0%, 60%, 100% {
      transform: translateY(0);
    }
    30% {
      transform: translateY(-16rpx);
    }
  }
  
  .loading-text {
    font-size: 26rpx;
    color: #999;
  }
  
  /* 无更多数据 */
  .no-more {
    padding: 40rpx 32rpx;
    text-align: center;
    background: white;
    border-top: 1rpx solid #f0f0f0;
  }
  
  .no-more-text {
    font-size: 26rpx;
    color: #999;
  }
  
  /* 难度级别颜色 */
  .level-badge {
    padding: 4rpx 12rpx;
    border-radius: 16rpx;
    font-size: 22rpx;
    font-weight: 500;
    color: white;
  }
  
  .level-beginner {
    background: #52c41a;
  }
  
  .level-intermediate {
    background: #1890ff;
  }
  
  .level-advanced {
    background: #f5222d;
  }
  
  /* 搜索初始状态 - 重点修复这里 */
  .search-init {
    background: white;
    padding: 0;
  }
  
  .init-content {
    padding: 40rpx 32rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  
  .init-icon {
    font-size: 80rpx;
    color: #1890ff;
    opacity: 0.5;
    margin-bottom: 20rpx;
  }
  
  .init-title {
    font-size: 32rpx;
    color: #333;
    font-weight: 600;
    text-align: center;
    margin-bottom: 12rpx;
  }
  
  .init-desc {
    font-size: 26rpx;
    color: #666;
    text-align: center;
    margin-bottom: 40rpx;
  }
  
  /* 热门搜索标签 */
  .hot-tags {
    width: 100%;
    display: flex;
    flex-wrap: wrap;
    gap: 16rpx;
    justify-content: center;
    margin-bottom: 40rpx;
  }
  
  .hot-tag {
    padding: 16rpx 24rpx;
    border-radius: 36rpx;
    font-size: 26rpx;
    color: white;
    font-weight: 500;
    display: flex;
    align-items: center;
    gap: 8rpx;
    transition: all 0.2s ease;
  }
  
  .hot-tag:active {
    opacity: 0.8;
    transform: scale(0.98);
  }
  
  .hot-tag-icon {
    font-size: 28rpx;
  }
  
  .hot-tag-type {
    font-size: 20rpx;
    opacity: 0.9;
    background: rgba(255,255,255,0.2);
    padding: 2rpx 8rpx;
    border-radius: 16rpx;
    margin-left: 6rpx;
  }
  
  /* 最近搜索 */
  .recent-search {
    width: 100%;
    background: #f8f9fa;
    border-radius: 20rpx;
    padding: 24rpx;
  }
  
  .recent-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20rpx;
  }
  
  .recent-title {
    font-size: 28rpx;
    color: #333;
    font-weight: 600;
  }
  
  .recent-clear {
    font-size: 24rpx;
    color: #1890ff;
    padding: 6rpx 16rpx;
    border-radius: 16rpx;
    background: white;
    border: 1rpx solid #1890ff;
  }
  
  .recent-list {
    display: flex;
    flex-direction: column;
    gap: 12rpx;
  }
  
  .recent-item {
    padding: 20rpx;
    border-radius: 12rpx;
    background: white;
    display: flex;
    align-items: center;
    gap: 16rpx;
    transition: all 0.2s ease;
  }
  
  .recent-item:active {
    background: #e6f7ff;
  }
  
  .recent-icon {
    font-size: 28rpx;
    color: #1890ff;
  }
  
  .recent-text {
    font-size: 26rpx;
    color: #333;
    font-weight: 500;
  }
  
  /* 响应式调整 */
  @media (max-width: 375px) {
    .search-bar {
      height: 80rpx;
    }
    
    .book-cover-container {
      width: 140rpx;
      height: 200rpx;
    }
    
    .hot-tag {
      padding: 14rpx 20rpx;
      font-size: 24rpx;
    }
  }
  
  /* 动画 */
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20rpx);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .search-results,
  .search-init {
    animation: fadeIn 0.3s ease-out;
  }
  
  .filter-tag,
  .book-card,
  .hot-tag,
  .recent-item {
    animation: fadeIn 0.2s ease-out;
  }
  
  /* 滚动条 */
  ::-webkit-scrollbar {
    width: 4rpx;
  }
  
  ::-webkit-scrollbar-track {
    background: transparent;
  }
  
  ::-webkit-scrollbar-thumb {
    background: #1890ff;
    border-radius: 4rpx;
  }
  
  /* 触摸反馈 */
  .filter-tag:active,
  .search-clear:active,
  .search-cancel:active,
  .retry-button:active,
  .no-results-button:active,
  .clear-all-btn:active {
    opacity: 0.7;
    transform: scale(0.95);
  }
  
  /* 页面加载动画 */
  @keyframes pageLoad {
    from {
      opacity: 0;
      transform: translateY(30rpx);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .search-container {
    animation: pageLoad 0.5s ease-out;
  }
  
  /* 筛选标签滚动 */
  .filter-tags {
    overflow-x: auto;
    scrollbar-width: none;
    -ms-overflow-style: none;
    padding-bottom: 8rpx;
  }
  
  .filter-tags::-webkit-scrollbar {
    display: none;
  }